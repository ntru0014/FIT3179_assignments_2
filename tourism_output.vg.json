{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "hconcat": [
    {
      "title": "Tourism output by industries (2016-2020)",
      "data": { "url": "data/tourism_output_by_industry.csv" },
      "width": 425,
      "height": 250,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": { "labelAngle": 0 }
        },
        "y": {
          "aggregate": "sum",
          "field": "Value",
          "type": "quantitative",
          "title": "Output (millions $ AUD)",
          "axis": { "format": ".2s" }
        },
        "color": {
          "field": "industries",
          "type": "nominal",
          "title": "Industry",
          "legend": {
            "orient": "bottom",
            "columns": 3,
            "titleFontSize": 12,
            "labelFontSize": 11,
            "symbolSize": 150,
            "symbolType": "square",
            "padding": 10
          }
        },
        "tooltip": [
          { "field": "industries", "type": "nominal", "title": "Industry" },
          { "field": "Year", "type": "ordinal" },
          {
            "aggregate": "sum",
            "field": "Value",
            "type": "quantitative",
            "format": ",~",
            "title": "$ million"
          }
        ]
      }
    },
    {
      "title": "Tourism gross value added (GVA) by industries (2016-2020)",
      "data": { "url": "data/tourism_gva_by_industry.csv" },
      "width": 425,
      "height": 250,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": { "labelAngle": 0 }
        },
        "y": {
          "aggregate": "sum",
          "field": "Value",
          "type": "quantitative",
          "title": "GVA (millions $ AUD)",
          "axis": { "format": ".2s" }
        },
        "color": {
          "field": "industries",
          "type": "nominal",
          "title": "Industry"
        },
        "tooltip": [
          { "field": "industries", "type": "nominal", "title": "Industry" },
          { "field": "Year", "type": "ordinal" },
          {
            "aggregate": "sum",
            "field": "Value",
            "type": "quantitative",
            "format": ",~",
            "title": "$ million"
          }
        ]
      }
    }
  ],
  "resolve": { "scale": { "color": "shared" }, "legend": { "color": "shared" } }
}
